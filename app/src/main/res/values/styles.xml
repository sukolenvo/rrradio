<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/toolbar_color</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Main" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/toolbar_color</item>
        <item name="toolbarColor">@color/toolbar_color</item>
        <item name="toolbarTitleSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="Player" parent="Main">
        <item name="toolbarColor">@color/player_toolbar</item>
        <item name="toolbarTitleSize">14sp</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:layout_marginRight">@dimen/half_padding</item>
        <item name="android:layout_marginTop">@dimen/half_padding</item>
        <item name="android:layout_margin">@dimen/half_padding</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:background">@drawable/selectable_background_gray</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/half_padding</item>
    </style>

    <style name="SettingsPrimary">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="SettingsSecondary">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">?attr/toolbarTitleSize</item>
    </style>

    <style name="NoResuts">
        <item name="android:text">@string/no_results</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarBreadcrumb">
        <item name="android:textSize">@dimen/breadcrumb_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoContentImageView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:visibility">visible</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_warning_black_48dp</item>
    </style>

    <style name="NoContentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/material_grey_600</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MenuSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/category_menu_padding</item>
        <item name="android:layout_marginBottom">@dimen/category_menu_padding</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="MenuImage">
        <item name="android:layout_width">@dimen/menu_icon_size</item>
        <item name="android:layout_height">@dimen/menu_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:layout_marginRight">@dimen/main_padding</item>
        <item name="android:layout_marginTop">@dimen/padding_75_percent</item>
        <item name="android:layout_marginBottom">@dimen/padding_75_percent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="DirectoryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/directory_button_text</item>
        <item name="android:background">@drawable/directory_button_background</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="DialogContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="DialogTitle">
        <item name="android:paddingTop">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:paddingLeft">@dimen/one_and_half_padding</item>
        <item name="android:paddingRight">@dimen/one_and_half_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:background">@drawable/selectable_background</item>
        <item name="android:paddingRight">@dimen/half_padding</item>
    </style>
</resources>
