<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DialogButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_marginRight">@dimen/half_padding</item>
        <item name="android:layout_marginTop">@dimen/half_padding</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:textColor">?attr/dialog_title_color</item>
        <item name="android:background">?attr/selectable_background_gray</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/half_padding</item>
    </style>

    <style name="SettingsPrimary">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/settings_text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="SettingsSecondary">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/settings_text_secondary</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">?attr/toolbarTitleSize</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
    </style>

    <style name="NoResuts">
        <item name="android:text">@string/no_results</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarBreadcrumb">
        <item name="android:textSize">@dimen/breadcrumb_text</item>
        <item name="android:textColor">?attr/toolbar_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoContentImageView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:visibility">visible</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_warning_black_48dp</item>
    </style>

    <style name="MenuItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/menu_selection</item>
    </style>

    <style name="NoContentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/material_grey_600</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MenuSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">@dimen/category_menu_padding</item>
        <item name="android:layout_marginBottom">@dimen/category_menu_padding</item>
        <item name="android:background">@color/primary_text_dark</item>
    </style>

    <style name="MenuImage">
        <item name="android:layout_width">@dimen/menu_icon_size</item>
        <item name="android:layout_height">@dimen/menu_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:layout_marginRight">@dimen/main_padding</item>
        <item name="android:layout_marginTop">@dimen/padding_75_percent</item>
        <item name="android:layout_marginBottom">@dimen/padding_75_percent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="DirectoryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/directory_button_text</item>
        <item name="android:background">?attr/directory_button_background</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="DialogContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/half_padding</item>
        <item name="android:background">?attr/dialog_background</item>
    </style>

    <style name="DialogTitle">
        <item name="android:paddingTop">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:textColor">?attr/dialog_title_color</item>
        <item name="android:paddingLeft">@dimen/one_and_half_padding</item>
        <item name="android:paddingRight">@dimen/one_and_half_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingRight">@dimen/half_padding</item>
    </style>

    <style name="PlaybackControlButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?attr/selectable_background_gray</item>
    </style>

    <style name="PlaybackControlSubButton">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?attr/selectable_background_gray</item>
    </style>

    <style name="DialogTitleSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?attr/dialog_title_color</item>
    </style>

    <style name="SettingsSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?attr/settings_separator</item>
    </style>

    <style name="IapButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/iap_button_text</item>
        <item name="android:background">?attr/iap_button_background</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="IapButton.Portret">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/main_padding</item>
        <item name="android:layout_marginRight">@dimen/main_padding</item>
        <item name="android:layout_marginBottom">@dimen/main_padding</item>
    </style>

    <style name="ClosableDialogTitle">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:paddingTop">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:textColor">?attr/closable_dialog_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <item type="id" name="close" />

    <style name="ClosableDialogButton">
        <item name="android:id">@id/close</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?attr/selectable_background_gray</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">?attr/closable_dialog_button</item>
    </style>
</resources>
