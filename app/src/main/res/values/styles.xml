<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Main" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/toolbar_color</item>
        <item name="toolbarColor">@color/toolbar_color</item>
        <item name="toolbarElevation">4dp</item>
        <item name="toolbarTitleSize">@dimen/abc_text_size_title_material_toolbar</item>
    </style>

    <style name="Player" parent="Main">
        <item name="toolbarColor">@color/player_toolbar</item>
        <item name="toolbarElevation">0dp</item>
        <item name="toolbarTitleSize">14sp</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginRight">@dimen/half_padding</item>
        <item name="android:layout_marginTop">@dimen/half_padding</item>
        <item name="android:layout_marginBottom">@dimen/half_padding</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/half_padding</item>
    </style>

    <style name="SettingsPrimary">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="SettingsSecondary">
        <item name="android:paddingLeft">@dimen/half_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingRight">36dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">?attr/toolbarTitleSize</item>
    </style>

    <style name="NoResuts">
        <item name="android:text">@string/no_results</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
