        <item name="main_toolbar_shadow">@drawable/toolbar_dropshadow</item>
        <item name="main_selection">@drawable/main_selection_light</item>
        <item name="primary_background">@color/primary_background</item>
        <item name="menu_selection">@drawable/item_menu_background</item>
        <item name="menu_icon_main">@drawable/ic_home_black_24dp</item>
