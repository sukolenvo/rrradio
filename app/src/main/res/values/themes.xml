<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/toolbar_color</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="activity_background">@android:color/white</item>
    </style>

    <style name="AppThemeDark" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/toolbar_color_dark</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="activity_background">@android:color/black</item>
    </style>

    <style name="Main" parent="AppTheme">
        <item name="toolbar_text_color">@android:color/white</item>
        <item name="icon_music_preview">@color/theme_light_queue_icon</item>
        <item name="icon_menu_color">@color/theme_light_menu_icon</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/toolbar_color</item>
        <item name="toolbarColor">@color/toolbar_color</item>
        <item name="toolbarTitleSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:selectableItemBackground">@drawable/selectable_background</item>
        <item name="main_background">#fdfdfd</item>
        <item name="main_separator_drawable">@drawable/main_decorator_light</item>
        <item name="main_toolbar_shadow">@drawable/toolbar_dropshadow</item>
        <item name="main_selection">@drawable/main_selection_light</item>
        <item name="primary_background">@color/primary_background</item>
        <item name="menu_selection">@drawable/item_menu_background</item>
        <item name="dialog_background">@drawable/dialog_background</item>
        <item name="progress_text_color">@color/material_grey_850</item>
        <item name="list_divider">@drawable/history_divider</item>
        <item name="toolbar_popup_style">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="dialog_title_color">@color/toolbar_color</item>
        <item name="selectable_background_gray">@drawable/selectable_background_gray</item>
        <item name="closable_dialog_title">#888</item>
        <item name="icon_toolbar_color">@color/theme_light_toolbar_icon</item>
    </style>

    <style name="MainDark" parent="AppThemeDark">
        <item name="icon_menu_color">@color/theme_dark_menu_icon</item>
        <item name="icon_music_preview">@color/theme_dark_queue_icon</item>
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
        <item name="toolbar_text_color">@color/primary_text_dark</item>
        <item name="colorPrimary">@color/primary_text_dark</item>
        <item name="colorPrimaryDark">@color/toolbar_color_dark</item>
        <item name="colorAccent">@color/primary_text_dark</item>
        <item name="toolbarColor">@color/toolbar_color_dark</item>
        <item name="toolbarTitleSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:selectableItemBackground">@drawable/selectable_background_dark</item>
        <item name="main_background">#090909</item>
        <item name="main_toolbar_shadow">@drawable/main_decorator</item>
        <item name="main_separator_drawable">@drawable/main_decorator</item>
        <item name="main_selection">@drawable/main_selection</item>
        <item name="primary_background">@color/primary_background_dark</item>
        <item name="menu_selection">@drawable/item_menu_background_dark</item>
        <item name="dialog_background">@drawable/dialog_background_dark</item>
        <item name="progress_text_color">@color/primary_text_dark</item>
        <item name="list_divider">@drawable/history_divider_dark</item>
        <item name="toolbar_popup_style">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="dialog_title_color">@color/primary_text_dark</item>
        <item name="selectable_background_gray">@drawable/selectable_background_simple_dark</item>
        <item name="closable_dialog_title">@color/primary_text_dark</item>
        <item name="icon_toolbar_color">@color/theme_dark_toolbar_icon</item>
    </style>

    <style name="Main.Settings">
        <item name="directory_button_background">@drawable/directory_button_background</item>
        <item name="directory_button_text">@drawable/directory_button_text</item>
        <item name="settings_separator">@color/settings_divider</item>
        <item name="settings_text_primary">@color/settings_text_color</item>
        <item name="settings_text_secondary">@color/settings_text_secondary</item>
    </style>

    <style name="MainDark.Settings">
        <item name="directory_button_background">@drawable/directory_button_background_dark</item>
        <item name="directory_button_text">@drawable/directory_button_text_dark</item>
        <item name="settings_separator">@color/primary_text_dark</item>
        <item name="settings_text_primary">@color/primary_text_dark</item>
        <item name="settings_text_secondary">#888888</item>
    </style>

    <style name="Main.Download">
        <item name="download_secondary">@color/progress_empty</item>
        <item name="download_primary">@color/toolbar_color</item>
    </style>

    <style name="MainDark.Download">
        <item name="download_secondary">@color/secondary_text_dark</item>
        <item name="download_primary">@color/primary_text_dark</item>
    </style>

    <style name="Main.Iap">
        <item name="iap_button_text">@android:color/white</item>
        <item name="iap_button_background">@drawable/iap_button</item>
    </style>

    <style name="MainDark.Iap">
        <item name="iap_button_text">@color/primary_text_dark</item>
        <item name="iap_button_background">@drawable/iap_button_background_dark</item>
    </style>

    <style name="Main.Player">
        <item name="icon_player_color">@color/theme_light_player_icon</item>
        <item name="toolbarColor">#10000000</item>
        <item name="toolbarTitleSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="player_icon_play">@drawable/ic_play_circle_outline_white_48dp</item>
        <item name="player_icon_pause">@drawable/ic_pause_circle_outline_white_48dp</item>
        <item name="genre_background">@color/toolbar_color</item>
        <item name="genre_button_chevron">@drawable/ic_chevron_up</item>
        <item name="genre_button_piano">@drawable/ic_piano</item>
        <item name="player_icon_seekbar_thumb">@drawable/seekbar_thumb</item>
        <item name="playlist_icon_active">@drawable/playlist_active_icon</item>
        <item name="playlist_item_selection">@drawable/item_playlist_background</item>
        <item name="player_dim">@integer/player_dim_light</item>
        <item name="player_icon_record">@drawable/player_record_button</item>
    </style>

    <style name="MainDark.Player">
        <item name="icon_player_color">@color/theme_dark_player_icon</item>
        <item name="toolbarTitleSize">14sp</item>
        <item name="android:textColor">@color/primary_text_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_dark</item>
        <item name="player_icon_play">@drawable/ic_play_circle_outline_dark</item>
        <item name="player_icon_pause">@drawable/ic_pause_circle_outline_dark</item>
        <item name="genre_background">@color/primary_text_dark</item>
        <item name="genre_button_chevron">@drawable/ic_chevron_up_dark</item>
        <item name="genre_button_piano">@drawable/ic_piano_dark</item>
        <item name="player_icon_seekbar_thumb">@drawable/seekbar_thumb_dark</item>
        <item name="playlist_icon_active">@drawable/playlist_active_icon_dark</item>
        <item name="playlist_item_selection">@drawable/item_playlist_background_dark</item>
        <item name="player_dim">@integer/player_dim_dark</item>
        <item name="player_icon_record">@drawable/player_record_button_dark</item>
    </style>

    <style name="Classic" parent="Main">
        <item name="main_background">#f0f0f0</item>
    </style>
</resources>