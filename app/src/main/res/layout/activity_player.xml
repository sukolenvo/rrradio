<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/current_container"
                android:layout_width="match_parent" android:layout_height="match_parent">

            <com.dakare.radiorecord.app.view.PlayerBackgroundImage
                    android:id="@+id/player_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:innerMarginVertical="@dimen/image_inner_margin_vertical"
                    app:innerMarginHorizontal="@dimen/image_inner_margin_horizontal"
                    android:src="@drawable/default_player_background" />

            <include layout="@layout/toolbar" />

            <LinearLayout
                    android:paddingLeft="@dimen/main_padding"
                    android:paddingTop="@dimen/half_padding"
                    android:paddingRight="@dimen/main_padding"
                    android:layout_below="@+id/my_toolbar"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/artist"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/song"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/player_control_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/equalizer_button"
                        style="@style/PlaybackControlButton"
                        android:src="@drawable/ic_settings_white_24dp"/>

                <ImageView
                        android:id="@+id/prev_button"
                        style="@style/PlaybackControlButton"
                        android:src="@drawable/ic_skip_previous_white_24dp"/>
                <ImageView
                        android:id="@+id/play_button"
                        style="@style/PlaybackControlButton"
                        android:src="@drawable/ic_play_circle_outline"/>
                <ImageView
                        android:id="@+id/pause_button"
                        style="@style/PlaybackControlButton"
                        android:src="@drawable/ic_pause_circle_outline"/>
                <ImageView
                        android:id="@+id/next_button"
                        style="@style/PlaybackControlButton"
                        android:src="@drawable/ic_skip_next_white_24dp"/>
                <ImageView
                        android:id="@+id/playlist_button"
                        style="@style/PlaybackControlButton"
                        android:src="@drawable/ic_format_list_bulleted"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/playback_progress"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_above="@id/player_control_container"
                    android:layout_height="wrap_content" >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/position"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white" />

                <SeekBar
                        android:id="@+id/playback_progress_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/one_and_half_padding"
                        android:paddingRight="@dimen/one_and_half_padding"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"
                        android:thumb="@drawable/seekbar_thumb"
                        android:progressDrawable="@drawable/seekbar_progress"
                        android:max="100" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:id="@+id/duration"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/playback_progress"
                    android:layout_marginLeft="6dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/clipboard_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="@drawable/ic_content_copy_white_24dp"/>

                <ImageView
                        android:id="@+id/download_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="@drawable/ic_file_download_white_24dp"/>

                <ImageView
                        android:id="@+id/sleep_timer_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="@drawable/sleep_timer_button"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:layout_below="@+id/my_toolbar"
                  android:background="@drawable/toolbar_dropshadow"/>
        </RelativeLayout>
    </RelativeLayout>

    <fragment
            android:id="@+id/fragment_drawer"
            android:layout_width="@dimen/menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:name="com.dakare.radiorecord.app.MenuFragment"/>

</android.support.v4.widget.DrawerLayout>