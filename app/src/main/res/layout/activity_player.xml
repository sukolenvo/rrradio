<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/current_container"
                android:layout_width="match_parent" android:layout_height="300dp">

            <com.dakare.radiorecord.app.PlayerBackgroundImage
                    android:id="@+id/player_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_player_background" />

            <include layout="@layout/toolbar" />

            <LinearLayout
                    android:id="@+id/player_control_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/prev_button"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:padding="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_skip_previous_white_24dp"/>
                <ImageView
                        android:id="@+id/play_button"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:padding="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_play_arrow_white_24dp"/>
                <ImageView
                        android:id="@+id/pause_button"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:padding="25dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:src="@drawable/ic_pause_white_24dp"/>
                <ImageView
                        android:id="@+id/next_button"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:padding="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_skip_next_white_24dp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/playback_progress"
                android:layout_below="@id/current_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
            <View
                    android:id="@+id/playback_progress_view"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/toolbar_color"
                    android:visibility="gone" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_below="@id/playback_progress"
                android:orientation="vertical">
            <ListView
                    android:id="@+id/playlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/playlist_divider"
                    android:dividerHeight="1px"
                    android:scrollbars="none" />

            <TextView
                    android:id="@+id/no_results"
                    android:visibility="gone"
                    style="@style/NoResuts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

    <fragment
            android:id="@+id/fragment_drawer"
            android:layout_width="@dimen/menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:name="com.dakare.radiorecord.app.MenuFragment"/>

</android.support.v4.widget.DrawerLayout>