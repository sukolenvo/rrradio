<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/activity_background">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                app:adSize="SMART_BANNER"
                app:adUnitId="@string/ad_player_screen">
        </com.google.android.gms.ads.AdView>

        <RelativeLayout
                android:id="@+id/current_container"
                android:layout_width="match_parent"
                android:layout_above="@id/adView"
                android:layout_height="match_parent">

            <com.dakare.radiorecord.app.view.PlayerBackgroundImage
                    android:id="@+id/player_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:innerMarginVertical="@dimen/image_inner_margin_vertical"
                    app:innerMarginHorizontal="@dimen/image_inner_margin_horizontal"
                    app:dim="?attr/player_dim"
                    android:src="@drawable/default_player_background" />

            <include layout="@layout/toolbar" />

            <LinearLayout
                    android:paddingLeft="@dimen/main_padding"
                    android:paddingTop="@dimen/half_padding"
                    android:paddingRight="@dimen/main_padding"
                    android:layout_below="@+id/my_toolbar"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/artist"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/song"
                        android:layout_width="match_parent"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/player_control_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/equalizer_button"
                        style="@style/PlaybackControlButton"
                        android:src="?attr/player_icon_equalizer"/>

                <ImageView
                        android:id="@+id/prev_button"
                        style="@style/PlaybackControlButton"
                        android:src="?attr/player_icon_previous"/>
                <ImageView
                        android:id="@+id/play_button"
                        style="@style/PlaybackControlButton"
                        android:src="?attr/player_icon_play"/>
                <ImageView
                        android:id="@+id/pause_button"
                        style="@style/PlaybackControlButton"
                        android:src="?attr/player_icon_pause"/>
                <ImageView
                        android:id="@+id/next_button"
                        style="@style/PlaybackControlButton"
                        android:src="?attr/player_icon_next"/>
                <ImageView
                        android:id="@+id/playlist_button"
                        style="@style/PlaybackControlButton"
                        android:src="?attr/player_icon_playlist"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/playback_progress"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_above="@id/player_control_container"
                    android:layout_height="wrap_content" >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:id="@+id/position"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical" />

                <SeekBar
                        android:id="@+id/playback_progress_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/one_and_half_padding"
                        android:paddingRight="@dimen/one_and_half_padding"
                        android:paddingTop="12dp"
                        android:paddingBottom="6dp"
                        android:thumb="?attr/player_icon_seekbar_thumb"
                        android:progressDrawable="@drawable/seekbar_progress"
                        android:max="100" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:id="@+id/duration"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/playback_progress"
                    android:layout_marginLeft="6dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/clipboard_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="?attr/player_icon_copy"/>

                <ImageView
                        android:id="@+id/download_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="?attr/player_icon_download"/>

                <ImageView
                        android:id="@+id/sleep_timer_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="?attr/player_icon_sleep_time"/>

                <ImageView
                        android:id="@+id/record_button"
                        style="@style/PlaybackControlSubButton"
                        android:src="?attr/player_icon_record"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:layout_below="@+id/my_toolbar"
                  android:background="@drawable/toolbar_dropshadow"/>
        </RelativeLayout>
    </RelativeLayout>

    <fragment
            android:id="@+id/fragment_drawer"
            android:layout_width="@dimen/menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:name="com.dakare.radiorecord.app.MenuFragment"/>

</android.support.v4.widget.DrawerLayout>