<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <com.dakare.radiorecord.app.PlayerBackgroundImage
                android:id="@+id/player_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_player_background" />

        <include layout="@layout/toolbar" />

        <LinearLayout
                android:id="@+id/player_control_container"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/prev_button"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:padding="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_skip_previous_white_24dp"/>
            <ImageView
                    android:id="@+id/play_button"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:padding="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_play_arrow_white_24dp"/>
            <ImageView
                    android:id="@+id/next_button"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:padding="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_skip_next_white_24dp"/>
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/player_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/player_control_container">

            <TextView
                    android:id="@+id/executor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/player_control_padding_left"
                    android:paddingTop="@dimen/player_control_padding_top"
                    android:paddingRight="@dimen/player_control_padding_right"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/song_name"
                    android:layout_below="@id/executor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/player_control_padding_left"
                    android:paddingTop="@dimen/player_control_padding_title_top"
                    android:paddingRight="@dimen/player_control_padding_right"
                    android:paddingBottom="@dimen/player_control_padding_bottom"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

        </RelativeLayout>


    </RelativeLayout>

    <fragment
            android:id="@+id/fragment_drawer"
            android:layout_width="@dimen/menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:name="com.dakare.radiorecord.app.MenuFragment"/>

</android.support.v4.widget.DrawerLayout>