<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        style="@style/DialogContainer"
        android:layout_margin="@dimen/main_padding">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/close"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:padding="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selectable_background_gray"
                android:scaleType="fitXY"
                android:src="@drawable/ic_close"/>

        <TextView
                android:text="@string/playlist_title"
                android:paddingLeft="@dimen/half_padding"
                android:paddingTop="@dimen/main_padding"
                android:paddingBottom="@dimen/main_padding"
                android:textColor="#888"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/toolbar_color"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ListView
                android:id="@+id/playlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/playlist_divider"
                android:dividerHeight="1px"
                android:scrollbars="none" />

        <TextView
                android:id="@+id/no_results"
                android:visibility="gone"
                style="@style/NoResuts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>