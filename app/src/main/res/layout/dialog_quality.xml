<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dakare="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <TextView
            android:text="@string/quality_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/one_and_half_padding"
            android:paddingLeft="@dimen/one_and_half_padding"
            android:paddingRight="@dimen/one_and_half_padding"
            android:paddingBottom="20dp"
            android:textSize="18sp"/>

    <View
            android:layout_width="match_parent" android:layout_height="1px"
            android:background="@color/station_color"/>

    <ListView
            android:id="@+id/quality_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:choiceMode="singleChoice" />

    <com.dakare.radiorecord.app.view.CheckboxLayout
            android:id="@+id/checkbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            dakare:text="@string/dont_ask_again">
    </com.dakare.radiorecord.app.view.CheckboxLayout>

    <View
            android:layout_width="match_parent" android:layout_height="1px"
            android:background="@color/station_color"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                style="@style/DialogButton"
                android:layout_toLeftOf="@+id/ok"
                android:text="@android:string/cancel"/>
        <Button
                android:id="@id/ok"
                android:layout_width="wrap_content"
                style="@style/DialogButton"
                android:layout_alignParentRight="true"
                android:text="@android:string/ok"/>
    </RelativeLayout>

</LinearLayout>