<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/playlist_item_container"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="?attr/playlist_item_selection"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/playlist_icon"
            android:layout_width="@dimen/playlist_position"
            android:layout_height="@dimen/playlist_position_icon_height"
            android:layout_marginLeft="@dimen/main_padding"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="?attr/playlist_icon_active"/>

    <TextView
            android:id="@+id/playlist_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/main_padding"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

    <ImageView
            android:id="@+id/download_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:background="?attr/selectable_background_gray"
            app:srcCompat="@drawable/ic_menu_download"/>
</LinearLayout>